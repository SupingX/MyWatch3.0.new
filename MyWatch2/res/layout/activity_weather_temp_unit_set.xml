<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

  <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/rl_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_top_blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/temperature"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

       
                <RelativeLayout
        android:id="@+id/rl_setting"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_back_bg"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:clickable="false"
                android:src="@drawable/ic_action_previous_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_back"
                android:text="@string/weather"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:background="@drawable/selector_home_bg"
            android:clickable="true"
            android:id="@+id/tv_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    
          <TextView
                          android:paddingLeft="12dp"
            android:paddingRight="12dp"
                   android:paddingBottom="3dp"
                   android:paddingTop="3dp"
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/select_type"
            android:textColor="@color/grey"
            android:textSize="14sp" />
  
      <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/alertdialog_line" />

    <RelativeLayout
        style="@style/DeviceItem"
        android:clickable="true"
        android:id="@+id/rl_c"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/img_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:src="@drawable/ic_more_shutdown"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_height"
            android:gravity="center_vertical"
            android:text="℃"
            android:textColor="@color/black"
            android:textSize="16sp" />

          <TextView
            android:id="@+id/tv_c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_height"
            android:gravity="center_vertical"
            android:text="√"
            android:textColor="#329E1C"
            android:layout_alignParentRight="true"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:layout_marginLeft="12dp"
        android:background="@color/alertdialog_line" />
    <RelativeLayout
          style="@style/DeviceItem"
        android:clickable="true"
        android:id="@+id/rl_f"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/img_min_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:src="@drawable/ic_more_shutdown"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_min_hr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_min_hr"
            android:gravity="center_vertical"
            android:text="℉"
            android:textColor="@color/black"
            android:textSize="16sp" />

           <TextView
            android:id="@+id/tv_f"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="√"
            android:textColor="#329E1C"
            android:layout_alignParentRight="true"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/alertdialog_line" />
    
      

</LinearLayout>