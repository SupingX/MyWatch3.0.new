<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
	
             <LinearLayout 
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                       android:layout_alignParentBottom="true"
                                android:id="@+id/ll_count"
                 >
          
          <LinearLayout 
     
        
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              >
              
              <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/img_pedo_cal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:src="@drawable/ic_sleep_total_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img_pedo_cal"
                       android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="@string/step_total"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/tv_total_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="0"
                                android:textColor="@color/text_black"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                      
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="@string/steps"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/img_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:padding="12dp"
                                android:src="@drawable/ic_sleep_total_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img_complete"
                                android:padding="8dp"
                                android:text="@string/total_distance"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/tv_total_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="0.00"
                                android:textColor="@color/text_black"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                         android:text="@string/km"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
              
          </LinearLayout>
	
          <LinearLayout 
              android:layout_alignParentBottom="true"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              >
              
              <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/img_total_cal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:src="@drawable/ic_pedo_calorie" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img_total_cal"
                       android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="@string/total_calorie"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/tv_total_cal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:text="0.00"
                                android:textColor="@color/text_black"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                      
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                              android:text="@string/kcal"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2" >
                    </LinearLayout>
              
          </LinearLayout>
          
          </LinearLayout>
          <LinearLayout 
                           android:layout_above="@id/ll_count"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    >
          <LinearLayout
              android:layout_gravity="center_horizontal"
                    android:id="@+id/ll_sleep_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_preious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/preious"
                        android:textColor="@color/text_black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_step_history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:padding="4dp"
                        android:text="@string/next"
                        android:textColor="@color/text_black"
                        android:textSize="22sp" />
                </LinearLayout>
          <com.mycj.mywatch.view.HistoryView
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:id="@+id/history_step"
              ></com.mycj.mywatch.view.HistoryView>
          </LinearLayout>
</RelativeLayout>
