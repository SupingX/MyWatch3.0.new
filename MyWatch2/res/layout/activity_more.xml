                <RelativeLayout
        android:id="@+id/rl_time_sync"
        style="@style/DeviceItem"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
    android:paddingLeft="12dp"
        android:paddingRight="12dp"
